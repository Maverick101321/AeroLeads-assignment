<% content_for :title, "Blog · Autodialer" %>

<div class="dashboard">
  <section class="dashboard-card">
    <header class="card-header">
      <div>
        <h1>AI Blog Articles</h1>
        <p class="card-subtitle">Explore the latest content generated by your AI assistant.</p>
      </div>
      <%= link_to "Generate More Articles", blog_generate_path, class: "btn-primary" %>
    </header>

    <% if @blogs.any? %>
      <div class="blog-list">
        <% @blogs.each do |blog| %>
          <article class="blog-item">
            <div class="blog-meta">
              <span class="blog-date"><%= blog.created_at.strftime("%B %d, %Y") %></span>
            </div>
            <h2 class="blog-title">
              <%= link_to blog.title, blog_path(blog) %>
            </h2>
            <div class="blog-actions">
              <%= link_to "Read Article →", blog_path(blog), class: "text-primary" %>
            </div>
          </article>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <p>No articles found. Start by generating some!</p>
      </div>
    <% end %>
  </section>
</div>
